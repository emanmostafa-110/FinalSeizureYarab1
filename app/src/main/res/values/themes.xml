<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalSeizureYarab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView" >
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextViewAnswer" >
        <item name="android:textColor">@color/colorButton</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="EditText">
        <item name="android:textColor">@color/colorInputText</item>
        <item name="background">@drawable/editshape</item>
        <item name="android:textColorHint">@color/colorInputText</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Button">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="background">@drawable/btnshape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="RadioButton">
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText_RecyclerView">
        <item name="android:textColor">@color/colorButton</item>
        <item name="android:textColorHint">@color/colorButton</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <color name="colorInputText">#EA99D5</color>
    <color name="colorText">#8946A6</color>
    <color name="colorButton">#B762C1</color>


</resources>